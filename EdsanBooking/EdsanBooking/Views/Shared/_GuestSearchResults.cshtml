@model EdsanBooking.Models.PaginatedListViewModel<EdsanBooking.Models.Guest>

<div class="table-responsive">
    <table class="table table-striped small-font-table">
        <thead>
            <tr>
                <th class="table-column-guest-id">Guest ID</th>
                <th class="table-column-first-name">First Name</th>
                <th class="table-column-last-name">Last Name</th>
                <th class="table-column-company">Company</th>
                <th class="table-column-action">Select</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var guest in Model.Items)
            {
                    <tr>
                        <td class="table-column-guest-id">@guest.GuestId</td>
                        <td class="table-column-first-name">@guest.GName</td>
                        <td class="table-column-last-name">@guest.LName</td>
                        <td class="table-column-company">@guest.Company</td>
                        <td class="table-column-action">
                            <button type="button" class="btn btn-primary select-guest" data-guest-id="@guest.GuestId">Select</button>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0);" onclick="searchGuests(@(Model.PageNumber - 1))">Previous</a>
                </li>
        }
        else
        {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Previous</a>
                </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="javascript:void(0);" onclick="searchGuests(@i)">@i</a>
                </li>
        }

        @if (Model.HasNextPage)
        {
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0);" onclick="searchGuests(@(Model.PageNumber + 1))">Next</a>
                </li>
        }
        else
        {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Next</a>
                </li>
        }
    </ul>
</nav>
