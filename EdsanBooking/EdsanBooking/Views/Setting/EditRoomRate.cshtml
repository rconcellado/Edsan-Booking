@model EdsanBooking.Models.RoomRates

@{
    ViewData["Title"] = "Edit Room Rate";
}

<h2>Edit Room Rate</h2>

<form asp-action="SaveRoomRate" method="post">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="Location" />
    <div class="form-group">
        <label asp-for="featureName" class="control-label">Feature Name</label>
        <input asp-for="featureName" class="form-control" readonly />
        <span asp-validation-for="featureName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="typeName" class="control-label">Type Name</label>
        <input asp-for="typeName" class="form-control" readonly />
        <span asp-validation-for="typeName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="hourType" class="control-label">Hour Type</label>
        <input asp-for="hourType" class="form-control" readonly />
        <span asp-validation-for="hourType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomRate" class="control-label">Room Rate (₱)</label>
        <input asp-for="RoomRate" class="form-control" />
        <span asp-validation-for="RoomRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Classification" class="control-label">Classification</label>
        <input asp-for="Classification" class="form-control" readonly />
        <span asp-validation-for="Classification" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="RoomRatesList" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
